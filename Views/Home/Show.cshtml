@model FrostyBear.Models.Product

@{
    ViewData["Title"] = "Show";
}
<style>
    .btn-back {
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div>
    <h1>@Html.DisplayFor(model => model.ProductName)</h1>
    <hr />
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <img src="@ViewBag.ImgFile" width="250" class="shadow" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <dl class="row">
                <dt class="row-cols-auto">
                    @Html.DisplayNameFor(model => model.Detail)
                </dt>
                <dd class="row-cols-auto">
                    @Html.DisplayFor(model => model.Detail)
                </dd>
                <dt class="row-cols-auto">
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>
                <dd class="row-cols-auto">
                    @Html.DisplayFor(model => model.ProductPrice)
                    <span>dollar</span>
                </dd>
                <div class="row">
                    <a asp-controller="Cart" asp-action="AddDtl" asp-route-pdid="@Model.ProductId" class="btn btn-danger float-end">
                        <i class="bi bi-cart-plus-fill"></i>
                        <i class="bi bi-cart"></i>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                        </svg>
                    </a>
                </div>
            </dl>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary btn-lg active btn-light btn-back" asp-action="Index">Back to List</a>
</div>
