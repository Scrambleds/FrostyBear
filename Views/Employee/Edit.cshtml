@model FrostyBear.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12">
        <img src="@ViewBag.ImgFile" width="250" class="shadow" />
        <div class="row mt-2">
            <div class="col">
                <a class="btn btn-sm btn-danger" onclick="return confirm('ยืนยันลบรูป')"
                   asp-action="ImgDelete" asp-route-id="@Model.EmployeeId">
                    <i class="bi bi-x-lg"></i> ลบรูปภาพ
                </a>
                <div class="row">
                    <div class="col-12">
                        <form method="post" enctype="multipart/form-data" asp-action="ImgUpload">
                            <input name="theid" type="hidden" value="@Model.EmployeeId" />
                            <input type="file" accept="image/png" id="imgfiles" name="imgfiles"
                                   class="form-control" required />
                            <button type="submit" class="btn btn-success mt-4">Upload</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeContact" class="control-label"></label>
                <input asp-for="EmployeeContact" class="form-control" />
                <span asp-validation-for="EmployeeContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeUsername" class="control-label"></label>
                <input asp-for="EmployeeUsername" class="form-control" />
                <span asp-validation-for="EmployeeUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePassword" class="control-label"></label>
                <input asp-for="EmployeePassword" class="form-control" />
                <span asp-validation-for="EmployeePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <select asp-for="PositionId" class="form-control" asp-items="ViewBag.Positions"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a class="btn btn-primary btn-lg active btn-light btn-back" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
