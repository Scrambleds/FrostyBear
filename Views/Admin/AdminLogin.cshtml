﻿@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<!--hid share layout-->
@{
    Layout = null;
}

<div class="container">
    <!--ทำการตรวจสอบว่ามีการส่ง ErrorMessage มาหรือไม่
        ถ้ามีให้แสดง Alert -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["ErrorMessage"]</div>
    }
</div>



<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Frosty Bear Admin</title>
    <link rel="shortcut icon" type="image/png" href="/admin/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="/admin/assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <!-- <img src="/admin/assets/images/logos/dark-logo.svg" width="180" alt=""> -->
                                    <img src="\assets\images\logos\FrostyBearLogo.png" width="180" alt="">

                                </a>
                                <p class="text-center">Hello welcome</p>
                                <!-- Form login -->
                                <form asp-controller="Admin" asp-action="AdminLogin" method="POST">
                                    <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div> -->
                                    <div class="mb-3">
                                        <label class="control-label">username</label>
                                        <input type="text" name="username" id="username" class="form-control" />

                                    </div>
                                    <div class="mb-4">
                                        <label class="control-label">password</label>
                                        <input type="password" name="password" id="password" class="form-control" />
                                        <div id="passwordAlert" class="alert alert-warning" style="display:none;" role="alert">
                                            This is a warning message for password.
                                        </div>
                                    </div>

                                    <div class="class=" btn btn-primary w-100 fs-4 mb-4 rounded-2">
                                        <input type="submit" value="Login" class="btn btn-primary" />
                                    </div>
                                </form>
                                <!-- End Form login-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/admin/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>



<script>

    //when enter login page cursor will focus on username input
    window.onload = function () {
        document.getElementById("username").focus();
    };

    // Function to handle keydown event on username input
    document.getElementById("username").addEventListener("keydown", function (event) {
        // Check if the pressed key is Enter
        if (event.key === "Enter") {
            // Prevent the default form submission
            event.preventDefault();
            // Focus on the password input
            document.getElementById("password").focus();
        }
    });

</script>