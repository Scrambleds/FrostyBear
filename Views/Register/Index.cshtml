@model FrostyBear.Models.Customer

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<section class="vh-100" style="background-color: #F38BA0;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="/images/p001.png" alt="register form" class="img-fluid w-100 h-100" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-controller="Register" asp-action="Register" method="post" class="w-100">
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Frosty Bear</span>
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create new account</h5>
                                    <div class="form-outline mb-4">
                                        <input asp-for="CustomerId" type="hidden" class="form-control form-control-lg" value="c001"/>
                                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="CustomerName" class="control-label"></label>
                                        <input asp-for="CustomerName" type="text" class="form-control form-control-lg" required />
                                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="CustomerUsername" class="control-label"></label>
                                        <input asp-for="CustomerUsername" type="text" class="form-control form-control-lg" required />
                                        <span asp-validation-for="CustomerUsername" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="CustomerPassword" class="control-label"></label>
                                        <input asp-for="CustomerPassword" type="password" class="form-control form-control-lg" required />
                                        <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Sign up</button>
                                    </div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Already have an account? <a asp-controller="ShopLogin" asp-action="Index" style="color: #393f81;">Sign in</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
