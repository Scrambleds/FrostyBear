@model FrostyBear.Models.Supplier

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SupId" class="form-control" type="hidden" value="SP001" />
                <span asp-validation-for="SupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupName" class="control-label"></label>
                <input asp-for="SupName" class="form-control" type="text" required />
                <span asp-validation-for="SupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupContact" class="control-label"></label>
                <input asp-for="SupContact" class="form-control" type="text" />
                <span asp-validation-for="SupContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupTel" class="control-label"></label>
                <input asp-for="SupTel" class="form-control" type="text" required />
                <span asp-validation-for="SupTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupEmail" class="control-label"></label>
                <input asp-for="SupEmail" class="form-control" type="email" required />
                <span asp-validation-for="SupEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupAdd" class="control-label"></label>
                <input asp-for="SupAdd" class="form-control" type="text" />
                <span asp-validation-for="SupAdd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupRemark" class="control-label"></label>
                <input asp-for="SupRemark" class="form-control" type="text" />
                <span asp-validation-for="SupRemark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary btn-lg active btn-light btn-back" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}